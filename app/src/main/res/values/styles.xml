<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="cornerRadius">35dp</item>
    </style>

    <style name="NumberButtonStyle" parent="ButtonStyle">
        <item name="backgroundTint">@color/number_button</item>
    </style>

    <style name="OperatorButtonStyle" parent="ButtonStyle">
        <item name="backgroundTint">@color/operator_button</item>
    </style>

    <style name="EqualsButtonStyle" parent="ButtonStyle">
        <item name="backgroundTint">@color/equals_button</item>
    </style>
</resources>
